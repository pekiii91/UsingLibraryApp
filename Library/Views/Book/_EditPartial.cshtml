@model Library.Models.BookHelperModels.BookModel



<div class="modal-dialog" role="document">
    <div class="modal-content">

        <div class="modal-header">
            <h2 class="modal-title">Edit book</h2>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        </div>

        <div class="modal-body">

            <form id="edit_book_form">

                <div class="form-group">
                    <label asp-for="Name" class="col-md-5 control-label">Name*</label>
                    <div class="col-md-12">
                        <input asp-for="Name" class="form-control">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Writer" class="col-md-5 control-label">Writer*</label>
                    <div class="col-md-12">
                        <input asp-for="Writer" class="form-control">
                        <span asp-validation-for="Writer" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Gener" class="col-md-5 control-label">Gener*</label>
                    <div class="col-md-12">
                        <input asp-for="Gener" class="form-control" />
                        <span asp-validation-for="Gener" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Published" class="col-md-5 control-label">Published*</label>
                    <div class="col-md-12">
                        <input asp-for="Published" type="date" class="form-control" />
                        <span asp-validation-for="Published" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Publisher" class="col-md-5 control-label">Publisher*</label>
                    <div class="col-md-12">
                        <input asp-for="Publisher" class="form-control" />
                        <span asp-validation-for="Publisher" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-5 control-label">Status*</label>
                    <div class="col-md-12">
                        <select class="form-control text-secondary" asp-for="StatusId" asp-items="@(new SelectList(Model.StatusList, "Value", "Text"))"></select>
                        <span asp-validation-for="StatusId" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <button type="submit" id="submit" class="btn btn-primary">Save</button>
                </div>

            </form>

        </div>

    </div>
</div>